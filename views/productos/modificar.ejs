<%- include("../templates/encabezado") %>
<%- include("../templates/menu") %>

<div class="container">
    <form action="/productos/editarProducto" method="post">
        <div class="card">
            <div class="card-header">
            <h1>Editar Producto</h1>
        </div>
            <div class="card-body">
            <input  type="hidden" name="id" id="id" value="<%= user.id %>">
            <input class="form-control mb-3" type="text" value="<%= user.nombre %>" name="nombre" id="nombre" placeholder="Nombre" >
            <input class="form-control mb-3" type="text" value="<%= user.cantidad %>"  name="cantidad" id="cantidad" placeholder="Cantidad" >
            <input class="form-control mb-3" type="text" value="<%= user.precio %>"  name="precio" id="precio" placeholder="Precio" >
            <input class="form-control mb-3" type="file" name="foto" id="foto" placeholder="Selecciona tu foto">
        </div>
            <div class="card-footer">
                <button class="btn btn-primary mb-3" type="submit">Editar producto</button>
                <button class="btn btn-secondary mb-3" type="reset">Limpiar campos</button>
            </div>
        </div>
    </form>
</div>

<%- include("../templates/pie") %></form>